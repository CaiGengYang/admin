Using a PostgreSQL database

user_table
	*user_id - serial PRIMARY KEY
	user_name - varchar(20) UNIQUE NOT NULL
	pass - varchar(20) NOT NULL
	real_name - varchar(60)
	birth_date - date (possibly NOT NULL)
	location - varchar(60)
	time_zone - varchar(4)
	bio - text
	email_address - varchar(60) NOT NULL
	on_probation - bool NOT NULL
	is_banned - bool NOT NULL

forum_role_table
	*role_id - serial PRIMARY KEY
	role_name - varchar(25) UNIQUE NOT NULL

user_to_forum_role_table
	user_id - integer (user_table.user_id) NOT NULL
	forum_role_id - integer (forum_role_table.role_id) NOT NULL

forum_topic_table
	*topic_id - serial PRIMARY KEY
	topic_name - varchar(40) NOT NULL
	parent_topic_id - integer (forum_topic_table.topic_id)
	is_public - bool NOT NULL
	is_active - bool NOT NULL

forum_topic_to_moderator_table - which topics are being moderated by particular user
	user_id - integer (user_table.user_id) NOT NULL
	topic_id - integer (forum_topic_table.topic_id) NOT NULL

forum_topic_permissions_table - which users have permission to see hidden topic
	topic_id - integer (forum_topic_table.topic_id) NOT NULL
	user_id - integer (user_table.user_id) NOT NULL

forum_post_table
	*post_id - serial PRIMARY KEY
	parent_post_id - integer (forum_post_table.post_id)
	author_id - integer (user_table.user_id) NOT NULL
	topic_id - integer (forum_topic_table.topic_id) NOT NULL
	post_subject - varchar(80) NOT NULL
	post_content - text NOT NULL
	date_posted - timestamp NOT NULL
	is_sticky - bool NOT NULL
	is_flagged - bool (flagged for abuse/review)
	is_closed - bool NOT NULL (if true, then no more replies are allowed but is 
				still visible)
	is_hidden - bool NOT NULL (if true, appears to be deleted)

forum_action_table
	*action_id - serial PRIMARY KEY
	action_name - varchar(40) UNIQUE NOT NULL

forum_log_table
	*log_id - serial PRIMARY KEY
	action_id - integer (forum_action_table.action_id) NOT NULL
	action_date - timestamp NOT NULL
	user_id - integer (user_table.user_id) NOT NULL
	user_acted_on - integer (user_table.user_id)
	post_acted_on - integer (forum_post_table.post_id)

forum_settings_table
	no_of_proby_posts - integer NOT NULL (If this is 0, no probation is used)
	use_moderators - bool NOT NULL
	require_birth_date - bool NOT NULL
	auto_logout - bool NOT NULL
	session_timeout - int NOT NULL (in minutes)















